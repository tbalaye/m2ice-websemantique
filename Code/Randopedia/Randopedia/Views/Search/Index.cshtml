@{
    ViewBag.Title = "Effectuer une recherche";
    var options = new AjaxOptions()
    {
        UpdateTargetId = "result",
        OnBegin = "if ($('#result-list') != undefined) { $('#result-div').html(\"\"); }",
        HttpMethod = "Post",
        LoadingElementId = "searching",
        LoadingElementDuration = 500
    };
}

<div id="search-box">
    
    @using (Ajax.BeginForm("SearchRando", options)) 
    {   
        <div id="search-bar">
            <div id="search-title">
                <h2>Rechercher une balade</h2>
            </div>
            <div id="search-field">
                @Html.TextBox("SearchString")
                <input type="submit" value="Allez !" /><br />
            </div>
            <div id="search-options">
                <div class="search-option">
                    @Html.CheckBox("SearchMode", true) Ontologie
                </div>
                <div class="search-option">
                    @Html.CheckBox("SearchDetail", true) Détaillée
                </div>
            </div>
        </div>
    }
    
    <div id="searching" style="display:none; color:black; font-weight: bold; margin-left: 5px;"> 
         <p>Recherche en cours...</p> 
    </div> 
    
    <div id="result">
        @*@{ Html.RenderPartial("PartialSearch"); }*@
    </div>

    <script type="text/javascript">
        document.getElementById('SearchString').focus();
    </script>
</div>

