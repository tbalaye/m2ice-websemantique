@{
    ViewBag.Title = "Effectuer une recherche";
    var options = new AjaxOptions()
    {
        UpdateTargetId = "result",
        HttpMethod = "Post",
        LoadingElementId = "searching",
        LoadingElementDuration = 500
    };
}



<h2>Rechercher</h2>

<div id="search-box">
    
    @using (Ajax.BeginForm("SearchRando", options)) 
    {   
        <div>
            @Html.TextBox("SearchString")
            <input type="submit" value="Ok!" />
        </div>
    }
    
    <div id="searching" style="display:none; color:black; font-weight: bold"> 
         <p>searching...</p> 
    </div> 
    
    <div id="result">
        @{ Html.RenderPartial("PartialSearch"); }
    </div>
</div>
